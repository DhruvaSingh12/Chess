{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile Chess",
            "type": "shell",
            "command": "javac",
            "args": [
                "-d",
                "bin",
                "-sourcepath",
                "src",
                "-cp",
                "res",
                "src/main/*.java",
                "src/piece/*.java"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$javasc"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Run Chess",
            "type": "shell",
            "command": "java",
            "args": [
                "-cp",
                "bin;res",
                "main.Main"
            ],
            "dependsOn": "Compile Chess",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        }
    ]
}
